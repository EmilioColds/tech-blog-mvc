<div class="container">
    <h1>The Tech Blog</h1>
    {{#each posts as |post|}}
    <div class="post">
        <h2>{{post.title}}</h2>
        <p>{{post.content}}</p>
        <div class="post-info">
            <span>Posted by {{post.user.username}} on {{formatDate post.createdAt "YYYY-MM-DD HH:mm:ss"}}</span>
        </div>
    </div>
    {{/each}}
</div>